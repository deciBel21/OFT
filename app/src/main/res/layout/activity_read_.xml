<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:backgroundTint="@color/black"
    tools:context=".Read_Activity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/black">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black">

        <androidx.cardview.widget.CardView
            android:id="@+id/main_View"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:background="#808080"
            android:backgroundTint="#808080"
            android:padding="10dp"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/bookimage"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:padding="9dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/ttl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="165dp"
                android:layout_marginTop="25dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:text="Title"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/qbookname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="165dp"
                android:layout_marginTop="40dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:text="Station Eleven"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/ttl" />

            <TextView
                android:id="@+id/auth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/qbookname"
                android:layout_marginStart="165dp"
                android:layout_marginTop="80dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:text="Author"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/qwriter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/auth"
                android:layout_marginStart="165dp"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="5dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="Emily St.John Mandel"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="italic" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/TITLE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book of the Update"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:layout_marginStart="15dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_View" />
        <androidx.cardview.widget.CardView
            android:id="@+id/main_View5"
            android:layout_width="375dp"
            app:cardCornerRadius="20dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#C0C0C0"
            android:backgroundTint="#C0C0C0"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TITLE">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/Contentdescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="9dp"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Set in the days of civilization's collapse, Station Eleven tells the story of a Hollywood star, his would-be savior, and a nomadic group of actors roaming the scattered outposts of the Great Lakes region, risking everything for art and humanity.

One snowy night a famous Hollywood actor slumps over and dies onstage during a production of King Lear. Hours later, the world as we know it begins to dissolve. Moving back and forth in time—from the actor's early days as a film star to fifteen years in the future, when a theater troupe known as the Traveling Symphony roams the wasteland of what remains—this suspenseful, elegiac, spellbinding novel charts the strange twists of fate that connect five people: the actor, the man who tried to save him, the actor's first wife, his oldest friend, and a young actress with the Traveling Symphony, caught in the crosshairs of a dangerous self-proclaimed prophet."
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/AuthorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emily St. John Mandel"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_View5" />

        <androidx.cardview.widget.CardView
            android:id="@+id/ImageView"
            android:layout_width="250dp"
            app:cardCornerRadius="20dp"
            android:layout_height="250dp"
            android:layout_marginTop="20dp"
            android:background="#C0C0C0"
            android:backgroundTint="#C0C0C0"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/AuthorName">
            <ImageView
                android:id="@+id/AuthorImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:srcCompat="@tools:sample/avatars" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Born:"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_marginTop="45dp"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toBottomOf="@+id/ImageView"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/ansb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comox, British Columbia, Canada"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textStyle="italic"
            android:ellipsize="end"
            android:layout_marginTop="45dp"
            android:layout_marginStart="75dp"
            app:layout_constraintTop_toBottomOf="@+id/ImageView"
            app:layout_constraintStart_toEndOf="@+id/b1"/>
        <TextView
            android:id="@+id/b2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Website:"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toBottomOf="@+id/b1"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/ansb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="http://www.emilymandel.com"
            android:textColor="	#1E90FF"
            android:textAllCaps="false"
            android:textStyle="normal"
            android:ellipsize="end"
            android:layout_marginTop="25dp"
            android:layout_marginStart="50dp"
            app:layout_constraintTop_toBottomOf="@+id/ansb1"
            app:layout_constraintStart_toEndOf="@+id/b2"/>
        <TextView
            android:id="@+id/b3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Genre:"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_marginTop="25dp"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toBottomOf="@+id/b2"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/ansb3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Literature &amp; Fiction"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textStyle="italic"
            android:ellipsize="end"
            android:layout_marginTop="25dp"
            android:layout_marginStart="75dp"
            app:layout_constraintTop_toBottomOf="@+id/ansb2"
            app:layout_constraintStart_toEndOf="@+id/b3"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/main_View7"
            android:layout_width="375dp"
            app:cardCornerRadius="20dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#C0C0C0"
            android:backgroundTint="#C0C0C0"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ansb3">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/Authordescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="9dp"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Emily St. John Mandel was born and raised on the west coast of British Columbia, Canada. She studied contemporary dance at the School of Toronto Dance Theatre and lived briefly in Montreal before relocating to New York."
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>





    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>